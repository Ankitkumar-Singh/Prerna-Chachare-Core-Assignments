@model MyFirstCoreMVCApp.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5 my-3">
    <h3 class="text-danger">Are you sure you want to delete this employee?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>Employee ID</dt>
        <dd>@Model.Id</dd>
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Department</dt>
        <dd>@Model.Department</dd>
        <dt>Skills</dt>
        <dd>@Model.Skills</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>Gender</dt>
        <dd>@Model.Gender</dd>
        <dt>Accepted Terms</dt>
        @if (Model.AcceptTerms == true)
        {
            <dd>Yes</dd>
        }
        else
        {
            <dd>No</dd>
        }
    </dl>
    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="Employee" class="btn btn-info ml-1">Back to List</a>
        </div>
    }
</div>
