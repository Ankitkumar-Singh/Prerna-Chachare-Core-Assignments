@model MyDBOperations.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="container p-5 mx-auto">
    <h1>Details Employee</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd>
    </dl>
    <div>
        <a asp-action="Save" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</div>